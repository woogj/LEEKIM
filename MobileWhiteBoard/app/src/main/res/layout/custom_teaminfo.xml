<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/lvtvTeamName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="15dp"
        android:textStyle="bold"
        android:textColor="#000000"

        tools:text="이김조"
        tools:textSize="20dp"
        tools:textColor="black"/>
    <TextView
        android:id="@+id/lvtvMaster"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="18dp"
        android:layout_marginRight="15dp"
        android:textColor="#000000"

        tools:text="팀장 : 2delay"
        tools:textSize="15dp"
        tools:textColor="black"
/>
    <TextView
        android:id="@+id/lvtvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lvtvTeamName"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="2dp"
        android:textColor="#000000"

        tools:text="주제 : 모바일 화이트보드"
        tools:textSize="15dp"
        tools:textColor="black" />

    <TextView
        android:id="@+id/lvtvTeamCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lvtvMaster"
        android:layout_alignParentRight="true"
        android:layout_marginTop="4dp"
        android:layout_marginRight="15dp"
        android:textColor="#000000"
        android:text="7명"

        tools:text="7명"
        tools:textSize="15dp"
        tools:textColor="black"/>
</RelativeLayout>