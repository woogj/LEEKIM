<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="0.2"
        android:orientation="horizontal"
        android:gravity="center"
        >
        <RadioGroup
            android:id="@+id/rg_teamChoice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="20dp">

            <RadioButton
                android:id="@+id/rb_WB"
                android:text="모바일 화이트 보드"
                android:layout_marginLeft="30dp"
                android:checked="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

            <RadioButton
                android:id="@+id/rb_task"
                android:text="업무 분담"
                android:layout_marginLeft="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RadioGroup>
    </LinearLayout>

    <ImageButton
        android:id="@+id/ibtn_tName_1"
        android:src="@drawable/nougat"
        android:layout_width="98dp"
        android:layout_height="104dp"
        android:layout_marginTop="50dp"
        android:layout_gravity="center_horizontal"
        android:scaleType="centerInside"
        android:layout_weight="0.04" />
    <TextView
        android:text="모바일 프로그래밍"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal" />

    <ImageButton
        android:id="@+id/ibtn_tName_2"
        android:src="@android:drawable/sym_def_app_icon"
        android:layout_width="98dp"
        android:layout_height="104dp"
        android:layout_marginTop="50dp"
        android:layout_gravity="center_horizontal"
        android:scaleType="centerInside"
        android:layout_weight="0.04" />
    <TextView
        android:text="전공종합설계"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="0.8"
        ></LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="0.4">
        <ImageButton
            android:id="@+id/ibtn_t_manage"
            android:src="@drawable/iocn_setting"
            android:layout_marginLeft="320dp"
            android:layout_marginBottom="10dp"
            android:scaleType="centerInside"
            android:layout_width="80dp"
            android:layout_weight="0.2"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>