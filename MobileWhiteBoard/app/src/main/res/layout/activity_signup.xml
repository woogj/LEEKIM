<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.2"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:textStyle="bold|italic"
            android:textSize="30dp"
            android:gravity="center"
            android:text="Mobile WhiteBoard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:textStyle="bold|italic"
            android:textSize="50dp"
            android:gravity="center"
            android:text="SignUp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8"
        android:padding="20dp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/edtName"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:paddingLeft="10dp"
            android:layout_weight="0.15"
            android:background="@drawable/round_button_base_blue"
            android:textSize="20dp"
            android:hint="이름"
            />

        <EditText
            android:id="@+id/edtEmail"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:paddingLeft="10dp"
            android:layout_marginTop="16dp"
            android:layout_weight="0.15"
            android:background="@drawable/round_button_base_blue"
            android:hint="이메일"
            />

        <EditText
            android:id="@+id/edtPw"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:paddingLeft="10dp"
            android:layout_marginTop="16dp"
            android:layout_weight="0.15"
            android:background="@drawable/round_button_base_blue"
            android:hint="비밀번호" />

        <EditText
            android:id="@+id/edtRePw"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:paddingLeft="10dp"
            android:layout_marginTop="16dp"
            android:layout_weight="0.15"
            android:background="@drawable/round_button_base_blue"
            android:hint="비밀번호 확인" />

        <RadioGroup
            android:id="@+id/group"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.15"
            android:layout_marginTop="16dp"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:gravity="center"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rbDevelop"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.333"
                android:text="개발" />

            <RadioButton
                android:id="@+id/rbPlan"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.333"
                android:text="기획" />

            <RadioButton
                android:id="@+id/rbDesign"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.333"
                android:text="디자인" />
        </RadioGroup>

        <Button
            android:id="@+id/btnResister"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.15"
            android:layout_marginTop="16dp"
            android:background="@drawable/round_button_base_blue"
            android:gravity="center"
            android:onClick="register_btn"
            android:text="회원가입" />

        <TextView
            android:id="@+id/txtLoginGo"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.1"
            android:gravity="right"
            android:text="Already member? 로그인" />
    </LinearLayout>
</LinearLayout>